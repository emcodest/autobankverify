                    <label>Batch Name (any name)</label>
                    <input class = "batch-box form-control" type = "text" placeholder = "batch name" size = "32" /><br><br>
                    <button params = "" func = "UploadSheet" class = "btn btn-primary btn-lg click"><i class = "fa fa-cloud-upload"></i> Upload Account Sheet</button>
                    <input style = "opacity: 0" type = "file" id = "uploadsheet" />
                </div>
                   
