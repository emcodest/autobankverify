                                <p class="card-text text-muted mb-1">Verified</p>
                                <h1 class="mb-0 font-weight-normal"><%= verified %></h1>
                                <br>
                                <br>
                        <div class = "text-center">
                            
                                    <a href = "/user/report?_skipid=yes&_verified=VERIFIED" class = "btn btn-primary">View</a>
                        </div>
                            </div>
                         
                              
                           
                        </div>
                    </div>
                    
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    <div class="card card-body mb-0 text-center bg-white">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <p class="card-text text-muted mb-1">UnVerified</p>
                                <h1 class="mb-0 font-weight-normal"><%= unverified %></h1>
                                <br>
                                <br>
                        <div class = "text-center">
                            
                                    <a href = "/user/report?_skipid=yes&_verified=UNVERIFIED" class = "btn btn-primary">View</a>
                        </div>
                            </div>
                         
                              
                           
                        </div>
                    </div>
                    
                </div>
             
               
            </div>
            

        </div>
 
   
    </div>
    
  
  

